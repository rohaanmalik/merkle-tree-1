{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "lib"]
}
